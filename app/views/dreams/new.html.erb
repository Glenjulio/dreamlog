<h1 class="page-title">New Dream</h1>

<%= simple_form_for(@dream) do |f| %>
  <div class="mb-4">
    <%= f.input :title, label: "Title" %>
  </div>

  <div class="mb-4">
    <%= f.input :tags, label: "Tags (optional)" %>
  </div>

  <div class="mb-4">
    <%= f.label :private, "Private?", class: "form-label d-block" %>
    <%= f.check_box :private, class: "form-check-input" %>
  </div>

  <%= f.simple_fields_for :transcription do |t| %>
    <div class="mb-4">
      <%= t.input :content, as: :text, label: "Manual transcription (optional)", input_html: { rows: 10, placeholder: "Write the full text of your dream here..." } %>
    </div>
  <% end %>

  <div class="text-center mt-5">
    <%= f.button :submit, "Save", class: "btn px-4 py-2 text-white", style: "background-color: #796BDA; border: none;" %>
  </div>
<% end %>

<%= render "shared/bottom_nav" %>
