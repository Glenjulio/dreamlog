<nav class="w-100" style="background: transparent; height: 100%; display: flex; align-items: center;">
  <div class="container-fluid py-2 d-flex justify-content-center align-items-center gap-5">
    <%= link_to mydreams_path do %>
      <i class="fas fa-list fa-2x text-white"></i>
    <% end %>

    <!-- Public Dreams link - visible for everyone -->
    <%= link_to dreams_path do %>
      <i class="fas fa-users fa-2x text-white"></i>
    <% end %>

    <% unless current_page?(root_path) %>
      <%= link_to root_path, class: "nav-plus-button" do %>
        <i class="fas fa-plus"></i>
      <% end %>
    <% end %>

    <!-- Chat Bot Icon - Nouvelle icône ajoutée -->
    <%= link_to chat_path, class: "nav-chat-button" do %>
      <i class="fas fa-comments fa-2x text-white"></i>
    <% end %>

    <% if user_signed_in? %>
      <%= link_to edit_user_registration_path do %>
        <i class="fas fa-cog fa-2x text-white"></i>
      <% end %>
    <% else %>
      <%= link_to new_user_session_path do %>
        <i class="fas fa-sign-in-alt fa-2x text-white"></i>
      <% end %>
    <% end %>
  </div>
</nav>
